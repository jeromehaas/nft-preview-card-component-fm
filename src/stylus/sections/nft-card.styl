.nft-card
	background-color: $very-dark-blue
	height: 100%
	width: 100%
	min-width: 100%
	min-height: 100vh
	overflow: hidden
	display: grid
	justify-content: center
	align-items: center

	&__card, .card
		padding: 24px
		background-color: $dark-blue
		width: 100%
		max-width: 350px
		border-radius: 15px
		box-shadow: 0px 25px 50px rgba(0, 0, 0, 0.0952917);
		
		&__preview, .preview
			width: 100%
			height: 303px
			border-radius: 15px
			margin-bottom: 24px
			background-size: cover
			background-position: center
			cursor: pointer
			position: relative
			overflow: hidden

			&__banner 
				position: absolute
				top: 0
				right: 0
				bottom: 0
				left: 0
				background-color: $cyan
				opacity: 0
				cursor: pointer;
				transition: opacity 0.3s ease

			&__eye 
				top: 50%
				left: 50%
				position: absolute
				transform: translate(-50%, -50%)
				width: 48px
				opacity: 0;
				transition: opacity 0.3s ease
				pointer-events: none
				


		&__details, .details
			display: grid
			grid-template-areas: 
			"title title" "description description" "price availability"
			grid-template-colums: repeat(2, 1fr)
			padding-bottom: 24px
			border-bottom: 1px solid $grey

			&__title 
				grid-area: title
				color: $white
				font-weight: 600
				font-size: 22px
				margin-bottom: 16px

			&__description 
				grid-area: description
				color: $soft-blue
				font-size: 18px
				margin-bottom: 24px
				font-weight: 300

			&__price 
				grid-area: price
				color: $cyan
				font-size: 15px
				font-weight: 600

				&::before 
					content: ""
					width: 11px
					height: 16px
					background: url('assets/icons/icon-ethereum.svg') no-repeat
					background-position: center;
					background-size: 100%
					display: inline-block
					margin-right: 4px;
					position: relative;
					top: 2px
	
			&__availability 
				grid-area: availability
				color: $soft-blue
				font-size: 15px
				justify-self: end;

				&::before 
					content: ""
					width: 16px
					height: 16px
					background: url('assets/icons/icon-clock.svg') no-repeat
					background-position: center;
					background-size: 100%
					display: inline-block
					margin-right: 6px;
					position: relative;
					top: 2px

		&__artist, .artist
			margin-top: 16px
			color: $soft-blue
			font-size: 15px;
			font-weight: 500;

			&::before 
				content: ""
				width: 33px
				height: 33px
				background: url('assets/images/profile-picture.webp') no-repeat
				background-position: center;
				background-size: 100%
				display: inline-block
				margin-right: 16px
				position: relative
				vertical-align: middle
				margin-bottom: 4px;

			&__link 
				color: $white
				cursor: pointer;
				transition: color 0.2s ease

				&:hover 
					color: $cyan
				
	@media (max-width: 500px) 
		
		&__artist, .artist
			text-align: center

			&::before 
				content: "" !important
				width: 0
				height: 0
				background: unset
				display: none	!important
			

